    <!-- ResultMap: ENUMê³¼ LocalDateTime ìžë™ ë§¤í•‘(ê¸°ë³¸ TypeHandler ì‚¬ìš©) -->
    <resultMap id="UserResultMap" type="com.solsol.heycalendar.domain.User">
